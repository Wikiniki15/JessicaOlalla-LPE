@model JessicaOlalla_LPE.Models.Equipo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre_Equipo" class="control-label">Nombre</label>
                <input asp-for="Nombre_Equipo" class="form-control" />
                <span asp-validation-for="Nombre_Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad_Equipo" class="control-label">Ciudad</label>
                <input asp-for="Ciudad_Equipo" class="form-control" />
                <span asp-validation-for="Ciudad_Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulos" class="control-label">Titulos</label>
                <input asp-for="Titulos" class="form-control" />
                <span asp-validation-for="Titulos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadioId" class="control-label">Estadio</label>
                <select asp-for="EstadioId" class="form-control" asp-items="ViewBag.EstadioId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Acepta_Extranjeros" /> @Html.DisplayNameFor(model => model.Acepta_Extranjeros)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
